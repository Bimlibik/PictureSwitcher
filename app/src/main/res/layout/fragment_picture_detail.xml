<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="ru.bimlibik.pictureswitcher.ui.picture_detail.PictureDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorScrim"
            android:elevation="8dp"
            android:visibility="@{viewModel.showScrim ? View.VISIBLE : View.GONE}">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:picture_preview="@{viewModel.pictureUrl}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:background="@color/colorScrim">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:text="@{String.format(@string/label_author, viewModel.author)}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/btn_details"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_info"
                    android:onClick="@{()-> viewModel.showAuthorProfile()}"/>

                <ImageView
                    android:id="@+id/btn_favorite"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_favorites"
                    android:onClick="@{()-> viewModel.updateFavorite()}"/>

                <ImageView
                    android:id="@+id/btn_wallpaper"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_check"
                    android:onClick="@{()-> viewModel.setPictureAsWallpaper()}"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>